{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@models/*": ["models/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@testSetup/*": ["testSetup/*"]
    },
    "strict": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["pages", "next-env.d.ts", "**/*.ts", "**/*.tsx", "**/**/*.ts", "**/**/*.tsx"],
  "exclude": ["node_modules"]
}
